        <Border Background="Gray" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
        <Border Background="Gray" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"/>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Button x:Name="BtnEmployeePortal" Click="BtnEmployeePortal_Click" HorizontalAlignment="Center" Margin="10" >
                <TextBlock Text="Портал сотрудников" Background="AliceBlue"/>
            </Button>
            <Button x:Name="BtnControlUser" HorizontalAlignment="Center" Margin="10" >
