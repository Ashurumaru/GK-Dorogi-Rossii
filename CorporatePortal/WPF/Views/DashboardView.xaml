                <TextBlock Text="Управление персоналом" Background="AliceBlue"/>
            </Button>
            <Button x:Name="Btn5" HorizontalAlignment="Center" Margin="10" >
                <TextBlock Text="Управление персоналом" Background="AliceBlue"/>
            </Button>
            <Button x:Name="Btn6" HorizontalAlignment="Center" Margin="10" >
                <TextBlock Text="Управление персоналом" Background="AliceBlue"/>
            </Button>
            <Button x:Name="Btn7" HorizontalAlignment="Center" Margin="10" >
                <TextBlock Text="Управление персоналом" Background="AliceBlue"/>
            </Button>
        </StackPanel>
        <Frame Grid.Row="1" Grid.Column="1" Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
